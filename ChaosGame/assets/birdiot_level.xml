<!-- Level1 Entity List-->
<data>
    <!-- There could be only three types of object of data tag;
     Entitiy
     Template
     Group
     
     Other tags will be INVALID in data tag scope
     -->

    <!-- Birdiot Entity -->
    <Entity type="CEntity" name="Birdiot">
        
        <!-- POSITION -->
        <Component type="CPositionComponent" name="Position">
            <position>
                <x>74</x>
                <y>240</y>
            </position>
        </Component>
        
        <!-- RENDER -->
        <Component type="CRenderComponent" name="Render">
            <layerName>birdLayer</layerName>
            <resourceName>btn_play.png</resourceName>
            <positionProperty>@Position.position</positionProperty>
            
            <anchorPoint>
                <x>0.5</x>
                <y>0.5</y>
            </anchorPoint>
        </Component>
        
        <!-- ANIMATION -->
        <Component type="CAnimationComponent" name="Animation">
            <spriteProperty>@Render.spriteNode</spriteProperty>
            <atlasProperty>@Render.atlas</atlasProperty>
        </Component>
        
        <!-- CONTROLLER -->
        <Component type="CControllerComponent" name="Controller">
        </Component>
        
        <!-- BIRD -->
        <Component type="CBirdComponent" name="Bird">
        </Component>
        
    </Entity>
    
    <!-- Group Sample -->
    <Group name="Things">
        <ObjectReference name="Birdiot"/>
    </Group>
</data>